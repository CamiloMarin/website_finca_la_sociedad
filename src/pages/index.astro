          // Inicializar Swiper solo si estamos en m√≥vil
          if (window.innerWidth < 768) {
            // Cargar Swiper desde CDN si no est√° disponible
            if (typeof Swiper === "undefined") {
              const link = document.createElement("link");
              link.rel = "stylesheet";
