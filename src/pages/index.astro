            // Variable para rastrear la columna activa
            let activeColumn = null;

            // Funci√≥n para activar una columna
            const activateColumn = (column) => {
              // Si ya est√° activa, no hacer nada
              if (activeColumn === column) return;

              // Remover activo de todas las columnas
              columns.forEach((col) => {
                col.classList.remove("border-amber-500");
                const indicator = col.querySelector(".absolute.top-6");
                if (indicator) {
                  indicator.classList.remove(
                    "bg-amber-500",
